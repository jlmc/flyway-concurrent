module add --name=org.postgresql --slot=main --resources=/opt/jboss/postgresql-42.1.4.jar --dependencies=javax.api,javax.transaction.api
/subsystem=datasources/jdbc-driver=postgres:add(driver-name="postgres",driver-module-name="org.postgresql",driver-class-name=org.postgresql.Driver)
data-source add --jndi-name=java:jboss/datasources/demoDS --name=demoDSPool --connection-url=jdbc:postgresql://${env.POSTGRES_PORT_5432_TCP_ADDR:demo-database}:${env.POSTGRES_PORT_5432_TCP_PORT:5432}/${env.POSTGRES_DATABASE:demodb} --driver-name=postgres --user-name=${env.POSTGRES_USER:postgres} --password=${env.POSTGRES_PASSWORD:postgres}
data-source add --jndi-name=java:jboss/datasources/demoDSAdmin --name=demoDSAdminPool --connection-url=jdbc:postgresql://${env.POSTGRES_PORT_5432_TCP_ADDR:demo-database}:${env.POSTGRES_PORT_5432_TCP_PORT:5432}/${env.POSTGRES_DATABASE:demodb} --driver-name=postgres --user-name=${env.POSTGRES_ADMIN_USER:postgres} --password=${env.POSTGRES_ADMIN_PASSWORD:postgres}
